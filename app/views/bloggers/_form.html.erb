<% if @blogger.errors.any? %>
<h2> There were <%=pluralize(@blogger.errors.size, "error")%></h2>
<ul>
<div id="Error Messages">
<% @blogger.errors.full_messages.each do |error|%>
<li><%= error %></li>
</div>
<%end%>
</ul>
<% end %>


<h2> Create Your Account </h2>

<%=form_for @blogger do |f|%>
<%=f.label :name%><br/>
<%=f.text_field :name%><br/>
<br/>
<%=f.label :bio%><br/>
<%=f.text_area :bio%><br/>
<br/>
<%=f.label :age%><br/>
<%=f.number_field :age%><br/>
<br/>
<%=f.submit%>
<% end %>
