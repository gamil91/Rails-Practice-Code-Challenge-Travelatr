<% if @post.errors.any? %>
<h2> There were <%=pluralize(@post.errors.size, "error")%></h2>
<ul>
<div id="Error Messages">
<% @post.errors.full_messages.each do |error|%>
<li><%= error %></li>
</div>
<%end%>
<% end %>


<h2>Create a new Post!</h2>

<%=form_for @post do |f|%>
<%=f.label :title%><br/>
<%=f.text_field :title%><br/>
<br/>
<%=f.label :content%><br/>
<%=f.text_area :content%><br/>
<br/>
<%=f.label "Blogger"%><br/>
<%=f.collection_select :blogger_id, Blogger.all, :id, :name%><br/><br/>
<%=f.label "Destination"%><br/>
<%=f.collection_select :destination_id, Destination.all, :id, :name%><br/>
<br/>
<%=f.submit%>
<% end %>
<br/>
<%=link_to "All Posts", posts_path%> ||
<%=link_to "All Destinations", destinations_path%>